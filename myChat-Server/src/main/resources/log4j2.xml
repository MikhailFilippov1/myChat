<?xml version="1.0" encoding="UTF-8"?>

<Configuration xlmns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <File name="FILE1" filename="${basePath}/log_for_server_info.log" append="true" >
            <PatternLayout pattern="%-5p %d{dd-MM-yyyy | HH:mm:ss:masses} [%t] %C (%F:%L) - %m%n" />
        </File>
        <File name="FILE2" filename="${basePath}/log_for_handler_info.log" append="true" >
            <PatternLayot pattern="%-5p %d{dd-MM-yyyy | HH:mm:ss:masses} [%t] %C (%F:%L) - %m%n" />
        </File>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{dd.MM.yy | HH:mm:ss:masses} comment [%t] %C (%F:%L) - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="FILE1"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="ru.geekbrains.myChat.chat_server.server.ClientHandler" level="trace" additivity="false">
            <AppenderRef ref="FILE2"/>
        </Logger>

    </Loggers>
    
</Configuration>